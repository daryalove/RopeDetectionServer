                <ItemsPanelTemplate>
                    <UniformGrid Rows="4" Columns="3"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <Image Name="d1" Source="/TestImages/d1.jpg" Width="200"/>
            <Image Name ="d2" Source="/TestImages/d2.jpg" Width="200"/>
            <Image Name="d3" Source="/TestImages/d3.jpg" Width="200"/>
            <Image Name="u1" Source="/TestImages/u1.jpg" Width="200"/>
            <Image Name="u2" Source="/TestImages/u2.jpg" Width="200"/>
            <Image Name="u3" Source="/TestImages/u3.jpg" Width="200"/>
            <Image Name="dt1" Source="/TestImages/dt1.jpg" Width="200"/>
            <Image Name="dt2" Source="/TestImages/dt2.jpg" Width="200"/>
            <Image Name="dt3" Source="/TestImages/dt3.jpg" Width="200"/>
            <Image Name="twice1" Source="/TestImages/twice1.jpg" Width="200"/>
            <Image Name="one1" Source="/TestImages/one1.jpg" Width="200"/>
            <Image Name="d4" Source="/TestImages/d4.jpg" Width="200"/>
            <Image Name="d5" Source="/TestImages/d5.jpg" Width="200"/>
        </ListBox>
    </Grid>
</Page>
